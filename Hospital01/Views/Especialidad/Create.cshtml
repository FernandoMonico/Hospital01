@using Hospital01.Dto;
@model EspecialidadDto;
@{
    ViewData["Title"] = "Create";
}

<h1>Nuevo registro de Especialidad</h1>

<div class="row">
    <div class="col-md-6">
        <form id="frm_guardar" asp-action="Create" method="post">
            <div class="form-group">
                <label asp-for="Nombre"></label>
                <input asp-for="Nombre" class="form form-control"/>
                <span asp-validation-for="Nombre" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descripcion"></label>
                <input asp-for="Descripcion" class="form form-control"/>
                <span asp-validation-for="Descripcion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="button" value="Guardar" class="btn btn-primary" onclick="Guardar()"/>
                <a asp-action="Index" class="btn btn-secondary">Regresar</a>
            </div>
        </form>
    </div>
</div>
<script>
    function Guardar() {
        ConfirmSave(undefined, undefined)
            .then((result) => {
                if (result.isConfirmed) {
                    document.getElementById("frm_guardar").submit();
                }
            });
    }
</script>